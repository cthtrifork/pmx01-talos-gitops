{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableDigestUpdates"
  ],
  "digest": {
    "enabled": false
  },
  "rebaseWhen": "auto",
  "packageRules": [
    {
      "automerge": true,
      "pinDigests": false,
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ]
    },
    {
      "automerge": true,
      "pinDigests": false,
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.github/.*\\.yaml$/"
      ],
      "matchStrings": [
        "(?<depName>[^\\s\"\\']+):\\s\"?(?<currentValue>.[^\"'\\s]*)\"?\\s+# renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<packageName>[^\\s]+)"
      ],
      "datasourceTemplate": "{{{datasource}}}",
      "packageNameTemplate": "{{{packageName}}}",
      "versioningTemplate": "semver"
    }
  ]
}
